<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Adjust the corner radius as needed -->
            <solid android:color="@color/appBlue" /> <!-- Orange color -->
        </shape>
    </item>
    <!-- Layer for the rest of the background -->
    <item android:top="1.5dp" android:bottom="1.5dp" android:left="1.5dp" android:right="1.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Adjust the corner radius as needed -->
<!--            <solid android:color="#1B1A1A" /> &lt;!&ndash; Transparent or other background color &ndash;&gt;-->
            <solid android:color="@color/cardColor" /> <!-- Transparent or other background color -->
        </shape>
    </item>
</layer-list>